@model List<Tag>

<link rel="stylesheet" href="~/css/components/toptags.css" />

<selection>
    <div class="card">
        <div class="card-header">Top Tags</div>
        <div class="card-body">
            <div class="toptags-list">

                @if (Model.Count == 0)
                {
                    <div>There are no Tags.</div>
                }
                else
                {
                    foreach (var tag in Model)
                    {
                        <a class="btn btn-primary" asp-controller="Blog" asp-action="Tags" asp-route-id="@tag.TagName">
                            @tag.TagName
                        </a>
                    }
                }

            </div>
        </div>
    </div>
</selection>