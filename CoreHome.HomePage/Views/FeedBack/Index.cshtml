@model CoreHome.HomePage.ViewModels.FeedbackViewModel

<div id="home">
    <link href="~/css/feedback/index.css" rel="stylesheet" />

    <div class="container text-center">
        <h1 class="display-4">@ViewBag.Warning</h1>
        <br />
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <p><strong>Contact the developer</strong></p>
                <p>@ViewBag.Profile.Name</p>
                <p>QQ： @ViewBag.Profile.QQ</p>
                <p>Email：<a href="mailto:@ViewBag.Profile.Email">@ViewBag.Profile.Email</a></p>
            </div>

            <div class="col-md-8">
                <form asp-controller="Feedback" asp-action="Index" method="post">

                    <input asp-for="Contact" class="form-control feedInfo" type="text" placeholder="Your contact details（Enail/QQ）" autocomplete="off" />
                    <span asp-validation-for="Contact" class="text-danger"></span>

                    <input asp-for="Title" class="form-control feedInfo" type="text" placeholder="Title" autocomplete="off" />
                    <span asp-validation-for="Title" class="text-danger"></span>

                    <textarea asp-for="Content" class="form-control feedInfo" rows="10" cols="100" placeholder="Description of the problem." maxlength="999"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>

                    <div class="row">
                        <div class="col">
                            <div class="input-group">
                                <img id="verfyImg" class="rounded-left" onclick="getVerfyCode(this)" src="/Service/VerificationCode" />
                                <input id="verificationCode" asp-for="VerificationCode" type="text" autocomplete="off" class="form-control rounded-right" placeholder="Code" />
                                <span asp-validation-for="VerificationCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <input id="btn_submit" type="submit" class="btn btn-success float-right" value="Submit" />
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>
